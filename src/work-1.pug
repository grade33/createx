include ./html/mixins.pug
include ./html/header.pug
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Modern Cottage
    link(rel="stylesheet", href="./css/style.min.css")
    script(defer src="./js/app.min.js")
  body
    .work-1
      +header(false,3)
      main.main
        section.hero.work-1__hero
          .container.hero__container
            .hero__content
              ul.breadcrumbs
                li.breadcrumbs__item
                  a.breadcrumbs__link(href="./index.html") Homepage
                li.breadcrumbs__item
                  a.breadcrumbs__link(href="./work.html") Work
                li.breadcrumbs__item
                  span.breadcrumbs__last Modern Cottage
              h1.work-1__hero-title Modern Cottage
            .swiper-preview.work-1__hero-preview
              div.swiper.swiper-preview__swiper
                ul.swiper-wrapper
                  li.swiper-slide.index-hero__content
                    img.swiper-preview__swiper-img(src="@img/work/work-1/image-1.jpg", alt="House Photo")
                  li.swiper-slide.index-hero__content
                    img.swiper-preview__swiper-img(src="@img/work/work-1/image-1.jpg", alt="House Photo")
                  li.swiper-slide.index-hero__content
                    img.swiper-preview__swiper-img(src="@img/work/work-1/image-1.jpg", alt="House Photo")
                  li.swiper-slide.index-hero__content
                    img.swiper-preview__swiper-img(src="@img/work/work-1/image-1.jpg", alt="House Photo")
                  li.swiper-slide.index-hero__content
                    img.swiper-preview__swiper-img(src="@img/work/work-1/image-1.jpg", alt="House Photo")
                  li.swiper-slide.index-hero__content
                    img.swiper-preview__swiper-img(src="@img/work/work-1/image-1.jpg", alt="House Photo")
                button.swiper-button-prev
                  svg
                    use(xlink:href="@img/sprite.svg#left")
                button.swiper-button-next
                  svg
                    use(xlink:href="@img/sprite.svg#right")
              div.swiper.swiper-preview__swiper-thumb
                ul.swiper-wrapper
                  li.swiper-slide.index-hero__content
                    img.swiper-preview__swiper-img(src="@img/work/work-1/image-1.jpg", alt="House Photo")
                  li.swiper-slide.index-hero__content
                    img.swiper-preview__swiper-img(src="@img/work/work-1/image-1.jpg", alt="House Photo")
                  li.swiper-slide.index-hero__content
                    img.swiper-preview__swiper-img(src="@img/work/work-1/image-1.jpg", alt="House Photo")
                  li.swiper-slide.index-hero__content
                    img.swiper-preview__swiper-img(src="@img/work/work-1/image-1.jpg", alt="House Photo")
                  li.swiper-slide.index-hero__content
                    img.swiper-preview__swiper-img(src="@img/work/work-1/image-1.jpg", alt="House Photo")
                  li.swiper-slide.index-hero__content
                    img.swiper-preview__swiper-img(src="@img/work/work-1/image-1.jpg", alt="House Photo")
        section.info.work-1__info
          .container.info__container
            .info__about
              h2.info__title Project goal
              .info__desc-block
                p.info__desc Build a private house 840 sq. feet with a large living room, three bedrooms, two bathrooms, a terrace, a pool and a garage for two cars.
                p.info__desc Modern design and care for each family member to feel as comfortable as possible in the new home.
            ul.info__characteristic
              -
                var character = [
                  ['Location','2464 Royal Ln. Mesa, New Jersey'],
                  ['Client','Darlene Robertson'],
                  ['Architect','HIK Architecture'],
                  ['Size','840 sq. feet'],
                  ['Value','$2 million'],
                  ['Completed','May 2020']
                ]
              each i in character
                li.info__characteristic-item
                  strong.info__characteristic-title=i[0]
                  span.info__characteristic-desc=i[1]
        section.decisions.work-1__decisions
          .container.decisions__container
            .decisions__img-wrap
              .decisions__img
            .decisions__content
              h2.decisions__title Constructive decisions
              ul.decisions__list
                -
                  var decisions = [
                    'Vitae ultrices ornare eu sed in est quisque duis id.',
                    'A fermentum in morbi pretium aliquam adipiscing donec tempus.',
                    'Mauris odio pellentesque commodo, diam.',
                    'Fermentum vestibulum est fermentum, egestas gravida scelerisque quis.',
                    'At pharetra libero blandit risus, fringilla sed commodo diam.',
                    'Integer ultricies viverra ut enim viverra ut.'
                  ]
                each i in decisions
                  li.decisions__item
                    svg.decisions__icon
                      use(xlink:href="@img/sprite.svg#check")
                    span.decisions__desc=i
        section.projects.work-1__projects
          .container.projects__container
            h2.projects__title Similar projects
            div.swiper.projects__swiper
              ul.swiper-wrapper
                li.swiper-slide.project(tabindex="0")
                  img.project__img(src="@img/work/work-3.jpg", alt="Photo of one of our works")
                  .project__content
                    h3.project__title Luxury Beach House
                    span.project__desc Private Houses
                    .project__link-wrap
                      +link('outline','orange','regular','View Project','./work-1.html','project__link')
                li.swiper-slide.project(tabindex="0")
                  img.project__img(src="@img/work/work-9.jpg", alt="Photo of one of our works")
                  .project__content
                    h3.project__title Brown and Gray Painted House
                    span.project__desc Private Houses
                    .project__link-wrap
                      +link('outline','orange','regular','View Project','./work-1.html','project__link')
                li.swiper-slide.project(tabindex="0")
                  img.project__img(src="@img/work/work-8.jpg", alt="Photo of one of our works")
                  .project__content
                    h3.project__title Scandinavian Style Interior
                    span.project__desc Private houses
                    .project__link-wrap
                      +link('outline','orange','regular','View Project','./work-1.html','project__link')
              .swiper-buttons-block
                button.swiper-button-prev(type="button")
                  svg
                    use(xlink:href="@img/sprite.svg#left")
                button.swiper-button-next(type="button")
                  svg
                    use(xlink:href="@img/sprite.svg#right")
            +more('Explore all our works','View Portfolio','./work.html')
      include ./html/footer.pug
