.ending-block
  section#contacts.discuss
    .container.discuss__container
      h2.visually-hidden Contacts
      .discuss__content
        h3.discuss__title A quick way to discuss details
        form.discuss__form
          label.field.field-default
            span Name*
            input(type="text" placeholder="Your name" required)
          label.field.field-default
            span Phone*
            input(type="tel" placeholder="Your phone number" required)
          label.field.field-default
            span Email
            input(type="email" placeholder="Your working email" required)
          label.field.field-default
            span Message*
            textarea(placeholder="Your message" required rows="2")
          label.checkbox(tabindex="0")
            input.visually-hidden(type="checkbox" required tabindex="-1")
            span I agree to receive communications from Createx Construction Bureau.
          +btn('solid','orange','regular','Send request','submit','discuss__form-btn')
  section.footer
    .container.footer__container
      .footer__top
        .footer__momentous
          .footer__logo-social
            a.footer__logo.logo(href="./index.html#header")
              img.logo__img(src="@img/global/logo-white.svg", alt="Логотип CreateX")
            ul.footer__social-list
              li.footer__social-item
                a.footer__social-link(href="#")
                  svg.footer__social-icon
                    use(xlink:href="@img/sprite.svg#whatsapp")
              li.footer__social-item
                a.footer__social-link(href="#")
                  svg.footer__social-icon
                    use(xlink:href="@img/sprite.svg#messanger")
              li.footer__social-item
                a.footer__social-link(href="#")
                  svg.footer__social-icon
                    use(xlink:href="@img/sprite.svg#facebook")
              li.footer__social-item
                a.footer__social-link(href="#")
                  svg.footer__social-icon
                    use(xlink:href="@img/sprite.svg#twitter")
              li.footer__social-item
                a.footer__social-link(href="#")
                  svg.footer__social-icon
                    use(xlink:href="@img/sprite.svg#youtube")
          .footer__desc Createx Construction Bureau has been successfully operating in the USA construction market since 2000. We are proud to offer you quality construction and exemplary service. Our mission is to set the highest standards for construction sphere.
        .footer__feedback
          h3.footer__feedback-title Let’s stay in touch
          form.footer__feedback-form
            label.field.field-default.footer__feedback-field
              span.visually-hidden Email
              input(type="email" placeholder="Your email address " required)
            +btn('solid','orange','regular','subscribe','submit','footer__feedback-btn')
          p.footer__feedback-desc *Subscribe to our newsletter to receive communications and early updates from Createx Construction Bureau.
      .footer__bottom
        .footer__contacts
          h3.footer__block-title Head Office
          ul.footer__contacts-list
            li.footer__contacts-item
              strong.footer__contacts-title Address:&nbsp;
              address.footer__contacts-name 8502 Preston Rd. Inglewood, New York
            li.footer__contacts-item
              strong.footer__contacts-title Call:&nbsp;
              a.footer__contacts-name.footer__contacts-link(href="tel:4055550128") (405) 555-0128
            li.footer__contacts-item
              strong.footer__contacts-title Email:&nbsp;
              a.footer__contacts-name.footer__contacts-link(href="mailto:hello@createx.com") hello@createx.com
        .footer__nav-block
          .footer__nav
            h3.footer__block-title Who Are We
            ul.footer__nav-list
              li.footer__nav-item
                a.footer__nav-link(href="./about.html") About Us
              li.footer__nav-item
                a.footer__nav-link(href="./positions.html") Available Positions
              li.footer__nav-item
                a.footer__nav-link(href="./contacts.html") Contacts
          .footer__nav
              h3.footer__block-title Our Experience
              ul.footer__nav-list
                li.footer__nav-item
                  a.footer__nav-link(href="./services.html") Services
                li.footer__nav-item
                  a.footer__nav-link(href="./work.html") Work
                li.footer__nav-item
                  a.footer__nav-link(href="./news.html") News

      small.footer__copyright
        span © All rights reserved. Made with &nbsp;
        svg.footer__copyright-icon
          use(xlink:href="@img/sprite.svg#heart")
        span &nbsp; by Createx Studio
      .to-top.hidden
        a.to-top__btn(href="#header" data-scroll)
          span.to-top__text GO TO TOP
          .to-top__icon
            svg
              use(xlink:href="@img/sprite.svg#up-chevron")
