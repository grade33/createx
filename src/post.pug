                h2.comment__title Leave your comment
                form.comment__form
                  .comment__field-block
                    .comment__field-one-line
                      label.field.field-large.comment__field
                        span Name*
                        input(type="text" placeholder="Your name" required)
                      label.field.field-large.comment__field
