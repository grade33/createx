include ./html/mixins.pug
include ./html/header.pug
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title How to Build Climate Change-Resilient Infrastructure
    link(rel="stylesheet", href="./css/style.min.css")
    script(defer src="./js/app.min.js")
  body
    .post
      +header(false,4)
      main.main
        section.hero.post__hero
          .container.hero__container
            ul.breadcrumbs
              li.breadcrumbs__item
                a.breadcrumbs__link(href="./index.html") Homepage
              li.breadcrumbs__item
                a.breadcrumbs__link(href="./news.html") News
              li.breadcrumbs__item
                span.breadcrumbs__last How to Build Climate Change-Resilient Infrastructure
            .hero__content.post__hero-content
              h1.hero__title.post__hero-title How to Build Climate Change-Resilient Infrastructure
              .post__hero-bottom
                .post-info.post__hero-info
                  span.post-info__category Industry News
                  .post-info__comment
                    svg.post-info__comment-icon
                      use(xlink:href="@img/sprite.svg#clock")
                    time.post-info__date(datetime="2020-06-24") June 24, 2020
                  .post-info__comment
                    svg.post-info__comment-icon
                      use(xlink:href="@img/sprite.svg#chat")
                    span.post-info__comment-text 4 comments
                ul.post__hero-social
                  li.post__hero-social-item
                    a.post__hero-social-link(href="#")
                      svg.post__hero-social-icon
                        use(xlink:href="@img/sprite.svg#facebook")
                  li.post__hero-social-item
                    a.post__hero-social-link(href="#")
                      svg.post__hero-social-icon
                        use(xlink:href="@img/sprite.svg#linked-in")
                  li.post__hero-social-item
                    a.post__hero-social-link(href="#")
                      svg.post__hero-social-icon
                        use(xlink:href="@img/sprite.svg#twitter")
