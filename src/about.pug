                      img.history__swiper-img(src="@img/about/"+i[1], alt="Photo")
                      p.history__swiper-desc=i[2]
                .swiper-buttons-block
                  button.swiper-button-prev(type="button")
                    svg
                      use(xlink:href="@img/sprite.svg#left")
                  button.swiper-button-next(type="button")
                    svg
                      use(xlink:href="@img/sprite.svg#right")
        section.partners.about__partners
          .container.partners__container
            h2.partners__title.about__partners-title Our partners
            p.partners__desc We are supported by 12+ industry bodies and media partners
            - var i = 0
            ul.partners__list
              while i < 12
                li.partners__item
                  - i++
                  a.partners__link(href="#" target="_blank")
                    img.partners__img(src="@img/about/partners/client-logo-"+i+".svg", alt="Partner company logo")
        section.team.about__team
          .container.team__container
            h2.team__title Our team
            p.team__desc People are at the heart of Createx Construction Bureau
            ul.team__list
              -
                var team = [
                  ['Courtney Alexander','CEO, Co-Founder'],
                  ['Calvin Fox','CTO, Co-Founder'],
                  ['Johnny Lane','Commercial Manager'],
                  ['Diane Mccoy','Director of Human Resources'],
                  ['Judith Warren','Lead Accountant'],
                  ['Floyd Simmmons','Finacial Director'],
                  ['Serenity Edwards','Director of Marketing'],
                  ['Shawn Edwards','Tech Lead'],
                ]
              - var j = 1
              each i in team
                li.team__item(tabindex="0")
                  .team__img-wrap
                    img.team__img(src="@img/about/team/person-"+j+".jpg", alt="Photo of a person")
                    .team__social
                      -
                        var social = [
                          ['linked-in','#'],
                          ['twitter','#'],
                          ['facebook','#'],
                        ]
                      each i in social
                        a.team__social-link(href=i[1])
                          svg.team__social-icon
                            use(xlink:href="@img/sprite.svg#"+i[0])
                  strong.team__name=i[0]
                  span.team__position=i[1]
                  -j++
            p.team__info
              | Become a part of the best team in the construction market of the USA.&nbsp;
              a.team__link(href="./positions.html") Available Positions
        section.worldwide.about__worldwide
          .container.worldwide__container
            h2.worldwide__title We work worldwide
            img.worldwide__map(src="@img/about/map.svg", alt="A map showing which countries we work in")
      include ./html/footer.pug
